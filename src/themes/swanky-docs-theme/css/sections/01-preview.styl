.section-preview
  text-align center

  .screenshot
    background url('../img/screenshot.jpg') top left no-repeat
    background-size cover

  .screenshot.animation
    background url('../img/screenshot.gif') top left no-repeat
    background-size cover

.system-tray-menu-chrome-wrapper, .system-tray-menu-wrapper
  position relative

.system-tray-menu-shadow
  position absolute
  background green
  bottom 0
  width 300px
  height 200px
  left: 50%;
  transform: translate(-50%, 0);
  background: #F2F2F2;
  box-shadow: 0px 2px 20px 0px rgba(0,0,0,0.10), 0px 2px 60px 0px rgba(0,0,0,0.19);

.system-tray-menu-chrome
  max-width 400px
  margin 0 auto 0 auto
  min-height 398px
  z-index 10
