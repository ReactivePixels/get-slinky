.system-tray-menu-chrome
  position relative
  background #F2F2F2
  border-top-left-radius 4px
  border-top-right-radius 4px
  border-bottom-left-radius 4px
  border-bottom-right-radius 4px
  border-color transparent
  overflow hidden

.screenshot
  position absolute
  left 0px
  right 0
  top 0
  bottom 0
  border-color transparent
  border-bottom-left-radius 3px
  border-bottom-right-radius 3px
  overflow hidden

.osx-bar
  position relative
  width 100%
  height 38px
  background #eee

.system-tray-icon
  position absolute
  left 50%
  margin-left -25px
  width 40px
  height 100%
  background url('../img/tray-icon.svg') center center no-repeat #318af5