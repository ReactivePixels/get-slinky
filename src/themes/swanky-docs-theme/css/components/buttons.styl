button
  text-shadow none
  font-weight 600
  border none

.btn-primary
  position relative
  text-decoration none
  display inline-block
  text-align center
  font-size 1.4rem
  color #fff
  background #000
  border-radius 18px
  border 1px solid #000
  height 36px
  line-height 34px
  box-sizing border-box
  padding 0 4rem
  font-weight 600

  &:visited
    color #fff
    background #000

  &:hover
    text-decoration none
    cursor pointer
    color #fff

  &:focus, &:active
    text-decoration none
    color #fff
    box-shadow inset 0 0 3px 2px rgba(0,0,0,.07)
    outline 0

.btn-default
  position relative
  text-decoration none
  display inline-block
  text-align center
  font-size 1.4rem
  color $black
  background #fff
  border-radius 18px
  border 1px solid #eee
  height 36px
  line-height 34px
  box-sizing border-box
  padding 0 4rem
  font-weight 600

  &:visited
    color $black
    background #fff

  &:hover
    text-decoration none
    color $black
    cursor pointer

  &:focus, &:active
    text-decoration none
    box-shadow inset 0 0 3px 2px rgba(0,0,0,.07)
    color $black
    outline 0

.btn-center
  text-align center
  margin 20px 0

  @media screen and (min-width: $screen-is-bigger-than-tablet)
    margin 40px 0

.btn-download
  transition: all 250ms
  opacity 0.75
  display block
  background none
  color #fff
  font-weight 300
  padding 20px 40px
  font-style normal

  .os-title
    font-size 1.6rem

  .os-icon
    margin 0 auto 6px auto

  .download-size
    font-size 1rem

  &:visited
    color #eee

  &:hover
    opacity 1
    text-decoration none
    color #fff

  @media screen and (min-width: $screen-is-bigger-than-mobile)
    display inline-block
    border-right 1px solid #3A3A3A
    padding 20px 40px

    &:last-child
      border-right none

  @media screen and (min-width: $screen-is-bigger-than-tablet)
    padding 20px 80px

a
  > .github
    display inline-block
    width 25px
    height 25px
    background-size @width @height
    position absolute
    top 4px
    left 5px