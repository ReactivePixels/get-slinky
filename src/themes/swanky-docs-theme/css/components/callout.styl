.callout-titlebar
  background darken($brand-secondary, 10%)
  text-transform uppercase
  color #fff
  font-size 1.2rem
  text-align center
  padding 6px 0

.callout
  background $grey-lightest
  border-top 1px solid $grey-light
  text-align center
  font-size 2.6rem
  color #000

  .content
    padding 30px 40px

    @media screen and (min-width: $screen-is-bigger-than-lg-desktop)
      padding 50px 40px 50px

    p
      margin 0

  &.callout-primary
    border-color darken($brand-secondary, 10%)
    background $brand-secondary
    font-style italic
    color #fff
