.callout-titlebar
  background #202020
  text-transform uppercase
  color #fff
  font-size 1.2rem
  text-align center
  padding 6px 0

.callout
  background #000
  border-top 1px solid $grey-light
  text-align center
  font-size 2.6rem
  color #fff

  .content
    padding 30px 40px

    @media screen and (min-width: $screen-is-bigger-than-lg-desktop)
      padding 50px 40px 50px

    p
      margin 0

  &.callout-primary
    border-color #3A3A3A
    background #222
    font-style italic
    color #fff
